<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OAHub.Storage</title>
    <link rel="stylesheet" href="~/lib/carbon-components/css/carbon-components.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bx--header" role="banner">
        <a class="bx--header__name" asp-controller="Home" asp-action="Index">
            <span class="bx--header__name--prefix">OAHub</span>
            &nbsp;[Storage]
        </a>
        <nav class="bx--header__nav">
            <ul class="bx--header__menu-bar" role="menubar">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="bx--header__menu-item" role="menuitem" tabindex="0">
                        <span class="bx--text-truncate--end">Home</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Privacy" class="bx--header__menu-item" role="menuitem" tabindex="0">
                        <span class="bx--text-truncate--end">Privacy</span>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="bx--header__global">
            <a asp-controller="Dashboard" asp-action="Overview" class="bx--header__menu-item" role="menuitem" tabindex="0">
                <span class="bx--text-truncate--end">Dashboard</span>
            </a>

            @if (User.Identity.IsAuthenticated)
            {
                <a class="bx--header__menu-item" role="menuitem" tabindex="0">
                    <span class="bx--text-truncate--end">Hello, @User.FindFirst("UserName").Value</span>
                </a>
                <a asp-controller="Auth" asp-action="SignOut" class="bx--header__menu-item" role="menuitem" tabindex="0">
                    <span class="bx--text-truncate--end">Sign Out</span>
                </a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="PassportAuthorize" class="bx--header__menu-item" role="menuitem" tabindex="0">
                    <span class="bx--text-truncate--end">Sign In</span>
                </a>
            }
        </div>
        <nav class="bx--side-nav__navigation bx--side-nav bx--side-nav--ux" aria-label="Side navigation">
            <ul class="bx--side-nav__items">
                <li class="bx--side-nav__item">
                    <a href="#" class="bx--side-nav__link">
                        <div class="bx--side-nav__icon bx--side-nav__icon--small">
                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true">
                                <path d="M8.24 25.14L7 26.67a14 14 0 0 0 4.18 2.44l.68-1.88a12 12 0 0 1-3.62-2.09zm-4.05-7.07l-2 .35A13.89 13.89 0 0 0 3.86 23l1.73-1a11.9 11.9 0 0 1-1.4-3.93zm7.63-13.31l-.68-1.88A14 14 0 0 0 7 5.33l1.24 1.53a12 12 0 0 1 3.58-2.1zM5.59 10L3.86 9a13.89 13.89 0 0 0-1.64 4.54l2 .35A11.9 11.9 0 0 1 5.59 10zM16 2v2a12 12 0 0 1 0 24v2a14 14 0 0 0 0-28z"></path>
                            </svg>
                        </div>
                        <span class="bx--side-nav__link-text">Dashboard</span>
                    </a>
                </li>
                <li class="bx--side-nav__item">
                    <a href="#" class="bx--side-nav__link">
                        <div class="bx--side-nav__icon bx--side-nav__icon--small">
                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true">
                                <path d="M8.24 25.14L7 26.67a14 14 0 0 0 4.18 2.44l.68-1.88a12 12 0 0 1-3.62-2.09zm-4.05-7.07l-2 .35A13.89 13.89 0 0 0 3.86 23l1.73-1a11.9 11.9 0 0 1-1.4-3.93zm7.63-13.31l-.68-1.88A14 14 0 0 0 7 5.33l1.24 1.53a12 12 0 0 1 3.58-2.1zM5.59 10L3.86 9a13.89 13.89 0 0 0-1.64 4.54l2 .35A11.9 11.9 0 0 1 5.59 10zM16 2v2a12 12 0 0 1 0 24v2a14 14 0 0 0 0-28z"></path>
                            </svg>
                        </div>
                        <span class="bx--side-nav__link-text">Your Shelf</span>
                    </a>
                </li>
                <li class="bx--side-nav__item">
                    <a href="#" class="bx--side-nav__link">
                        <div class="bx--side-nav__icon bx--side-nav__icon--small">
                            <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true">
                                <path d="M8.24 25.14L7 26.67a14 14 0 0 0 4.18 2.44l.68-1.88a12 12 0 0 1-3.62-2.09zm-4.05-7.07l-2 .35A13.89 13.89 0 0 0 3.86 23l1.73-1a11.9 11.9 0 0 1-1.4-3.93zm7.63-13.31l-.68-1.88A14 14 0 0 0 7 5.33l1.24 1.53a12 12 0 0 1 3.58-2.1zM5.59 10L3.86 9a13.89 13.89 0 0 0-1.64 4.54l2 .35A11.9 11.9 0 0 1 5.59 10zM16 2v2a12 12 0 0 1 0 24v2a14 14 0 0 0 0-28z"></path>
                            </svg>
                        </div>
                        <span class="bx--side-nav__link-text">API</span>
                    </a>
                </li>
            </ul>
        </nav>
    </header>
    <main id="main-content" class="bx--content">
        <div class="bx--grid">
            <div class="bx--row">
                <section class="bx--offset-lg-3 bx--col-lg-13">
                    @RenderBody()
                </section>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="bx--offset-lg-2 bx--col-lg-13">
            &copy; 2020 - OAHub.Storage - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/carbon-components/scripts/carbon-components.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
