@model OAHub.Storage.Models.ViewModels.Cases.CreateModel
@{
    ViewData["Title"] = "List";
}

<form method="post" asp-route-shelfId="@Context.Request.Query["shelfId"]">
    <div class="bx--row">
        <div class="bx--col-max-8">

            <div class="bx--form-item" style="margin-bottom: 32px">
                <h2>Create a new Case</h2>
            </div>
            <div class="bx--form-item" style="margin-bottom: 24px">
                <h6 for="text-input-3" class="bx--label">Case name</h6>
                <div class="bx--form__helper-text">
                    The name of your case
                </div>
                <input id="text-input-3" type="text" asp-for="Name" class="bx--text-input" placeholder="Enter here...">
            </div>
            <div class="bx--form-item" style="margin-bottom: 24px">
                <h6 for="text-area-2" class="bx--label">Case description</h6>
                <div class="bx--form__helper-text">
                    The description of your case
                </div>
                <textarea id="text-area-2" class="bx--text-area" rows="4" placeholder="Enter here..." asp-for="Description"></textarea>
            </div>
            <div class="bx--form-item" style="margin-top: 32px">
                <button type="submit" class="bx--btn bx--btn--primary">Submit</button>
            </div>

        </div>
        <div class="bx--col-max-4">
            <div data-notification
                 class="bx--inline-notification bx--inline-notification--info bx--inline-notification--low-contrast"
                 role="alert">
                <div class="bx--inline-notification__details">
                    <svg focusable="false" preserveAspectRatio="xMidYMid meet" style="will-change: transform;" xmlns="http://www.w3.org/2000/svg" class="bx--inline-notification__icon" width="20" height="20" viewBox="0 0 32 32" aria-hidden="true"><path d="M16,2A14,14,0,1,0,30,16,14,14,0,0,0,16,2Zm0,5a1.5,1.5,0,1,1-1.5,1.5A1.5,1.5,0,0,1,16,7Zm4,17.12H12V21.88h2.88V15.12H13V12.88h4.13v9H20Z"></path></svg>
                    <div class="bx--inline-notification__text-wrapper">
                        <p class="bx--inline-notification__title">Your case will be mount under the shelf: </p>
                        <p class="bx--inline-notification__subtitle">@Model.RootShelf.Value (@Model.RootShelf.Key)</p>
                    </div>
                </div>
                @*
                    <button tabindex="0"
                        class="bx--inline-notification__action-button bx--btn bx--btn--sm bx--btn--ghost"
                        type="button">
                        Okay
                    </button>
                *@
                <button data-notification-btn class="bx--inline-notification__close-button" type="button"
                        aria-label="close">
                    <svg focusable="false" preserveAspectRatio="xMidYMid meet" style="will-change: transform;" xmlns="http://www.w3.org/2000/svg" class="bx--inline-notification__close-icon" width="20" height="20" viewBox="0 0 32 32" aria-hidden="true"><path d="M24 9.4L22.6 8 16 14.6 9.4 8 8 9.4 14.6 16 8 22.6 9.4 24 16 17.4 22.6 24 24 22.6 17.4 16 24 9.4z"></path></svg>
                </button>
            </div>
        </div>
    </div>
</form>
