@model OAHub.Workflow.Models.ViewModels.Connect.SetupModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <form method="post" asp-action="Create">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create a workflow dashboard</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <h4>Summary</h4>
                        <div class="text-muted">
                            <p class="text">
                                Organization name
                                <b class="d-block">@Model.OrganizationName</b>
                            </p>
                            <p class="text">
                                Extension name
                                <b class="d-block">OAHub.Workflow</b>
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" type="checkbox" id="confirmCheck" asp-for="ConfirmAction">
                            <label for="confirmCheck" class="custom-control-label">Confirm this action</label>
                        </div>
                        <div style="display: none">
                            <input asp-for="OrganizationId" />
                            <input asp-for="OrganizationSecret" />
                            <input asp-for="OrganizationName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Done</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-1"></div>
</div>
