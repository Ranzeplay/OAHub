@model OAHub.Base.Models.App
@{
    ViewData["Title"] = "App Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" asp-action="Update" asp-route-AppId="@Model.AppId">
            <div class="card">
                <div class="card-body">
                    <h1>App Details</h1>
                    <p class="text-muted">For @Model.Name</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>App Id</label>
                        <input value="@Model.AppId" type="text" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>App Secret</label>
                        <input value="@Model.AppSecret" type="text" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label>Create Time (Utc)</label>
                        <input value="@Model.CreateTime" type="text" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

