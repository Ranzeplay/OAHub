@model OAHub.Passport.Models.ViewModels.Auth.SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" asp-action="SignIn">
            <div class="card">
                <div class="card-body">
                    <h1>Sign in</h1>
                    <p class="text-muted">to your account</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <div style="display: none">
                        <input asp-for="AppId" />
                        <input asp-for="RedirectUri" />
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>
                            <div class="col-6 text-right">
                                <a asp-controller="Account" asp-action="SignUp" class="btn btn-link">Get a new account</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
