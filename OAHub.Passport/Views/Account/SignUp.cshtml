@model OAHub.Passport.Models.ViewModels.Account.SignUpModel
@{
    ViewData["Title"] = "SignUp";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" asp-action="SignUp">
            <div class="card">
                <div class="card-body">
                    <h1>Sign up</h1>
                    <p class="text-muted">a new account</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input asp-for="UserName" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" />
                    </div>
                    <div style="display: none">
                        <input asp-for="AppId" />
                        <input asp-for="RedirectUri" />
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>
                            <div class="col-6 text-right">
                                <a asp-controller="Auth" asp-action="SignIn" class="btn btn-info btn-block">Already have an account</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
