@model List<OAHub.Organization.Models.ViewModels.Orgainzations.MemberModel>
@{
    ViewData["Title"] = "Members";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <table class="table table-condensed table-head-fixed table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Position</th>
                            <th scope="col">Email Address</th>
                            <th scope="col">Join Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <th>@member.User.FullName</th>
                                <th>@member.Member.Position</th>
                                <th>@member.User.Email</th>
                                <th>@member.Member.JoinAt</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Send invitation</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Invite" asp-route-id="@Context.Request.Path.Value.Split('/')[1]">
                    <div class="form-group">
                        <label>User Id</label>
                        <input type="text" class="form-control" name="UserId" />
                    </div>
                    <div class="form-group">
                        <label>Position</label>
                        <input type="text" class="form-control" name="Position" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>