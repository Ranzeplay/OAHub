@model OAHub.Organization.Models.ViewModels.Orgainzations.CreateModel
@{
    ViewData["Title"] = "Create organization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="margin-top: 5%" method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="card-title">Create a New Orgainzation</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="4" placeholder="" autocomplete="off" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Official Website</label>
                        <input type="url" class="form-control" asp-for="OfficialWebsite">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Continue</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>
