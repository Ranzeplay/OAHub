<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OAHub.Survey</title>
    <link rel="stylesheet" href="~/lib/uikit/dist/css/uikit.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="uk-navbar-container uk-margin" uk-navbar>
            <div class="uk-navbar-left">
                <a class="uk-navbar-item uk-logo" href="#">[Survey] Dashboard</a>

                <ul class="uk-navbar-nav">
                    <li>
                        <a href="#">Create</a>
                        <div class="uk-navbar-dropdown">
                            <ul class="uk-nav uk-navbar-dropdown-nav">
                                <li><a href="#">Standard Survey</a></li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="#">View</a>
                        <div class="uk-navbar-dropdown">
                            <ul class="uk-nav uk-navbar-dropdown-nav">
                                <li><a href="#">All Surveys</a></li>
                                <li><a href="#">Analysis</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="uk-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

