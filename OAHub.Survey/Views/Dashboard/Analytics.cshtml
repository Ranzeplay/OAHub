@model OAHub.Survey.Models.ViewModels.Dashboard.AnalyticsModel
@{
    ViewData["Title"] = "Analytics";
    Layout = "~/Views/Inside/_Layout.cshtml";
}

<div class="uk-child-width-expand@s uk-text-center" uk-grid>
    <div class="uk-width-1-2">
        <div class="uk-card uk-card-default uk-card-body uk-width-1-1">
            <h2 class="uk-card-title">@Model.TotalSolveCount</h2>
            <p>Total solving count</p>
        </div>
    </div>
    <div class="uk-width-1-2">
        <div class="uk-card uk-card-default uk-card-body uk-width-1-1">
            <h2 class="uk-card-title">@Model.TotalFormCount</h2>
            <p>Forms created by you</p>
            <div class="uk-margin">
                <a asp-area="" asp-controller="Dashboard" asp-action="AllSurveys" role="button" class="uk-button uk-button-primary uk-width-1-1">View all</a>
            </div>
        </div>
    </div>
</div>

