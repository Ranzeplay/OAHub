@model OAHub.Status.Models.ViewModels.Track.CreateModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <article class="panel is-link">
        <p class="panel-heading">
            New Track
        </p>
        <div class="panel-block">
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input asp-for="Name" class="input" type="text" placeholder="Enter text here...">
                </div>
                <p class="help">This is the name of your track</p>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button type="submit" class="button is-link">Submit</button>
                </div>
                <div class="control">
                    <a asp-controller="Manage" asp-action="Index" class="button is-link is-light">Cancel</a>
                </div>
            </div>
        </div>
    </article>
</form>
