@model OAHub.Status.Models.ViewModels.Manage.NewPostModel
@{
    ViewData["Title"] = "NewPost";
}

<form method="post" class="form" asp-route-trackId="@Context.Request.Query["trackId"]">
    <h1 class="title">New post</h1>

    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input asp-for="Title" class="input" type="text" placeholder="One word to describe current status">
        </div>
    </div>

    <div class="field">
        <label class="label">Description</label>
        <div class="control">
            <textarea asp-for="Description" class="textarea" placeholder="Short details about current status"></textarea>
        </div>
    </div>

    <div class="field">
        <label class="label">Subject</label>
        <div class="control">
            <div class="select">
                <select asp-for="PostColor">
                    @foreach (var color in Enum.GetValues(typeof(OAHub.Base.Models.StatusModels.PostColor)))
                    {
                        <option value="color">@color</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <label class="checkbox">
                <input asp-for="ShowOnHeader" type="checkbox">
                Show this status on header
            </label>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link">Confirm and Post</button>
        </div>
        <div class="control">
            <a class="button is-link is-light">Cancel</a>
        </div>
    </div>
</form>
